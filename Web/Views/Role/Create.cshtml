@model ViewModels.Input.RoleViewModel

@{
	ViewData["Title"] = "Създай роля";
}

<body class="bg-orange">
	<div class="container">
		<div class="row justify-content-center lower">
			<div class="col-md-6 register-form-bg rounded">
				<form asp-action="Create" asp-controller="Role" method="post">
					<div asp-validation-summary="ModelOnly" class="text-danger"></div>
					<div class="form-group text-center">
						<h2 class="dark-heading b">Създай роля</h2>
						<br />
						<div asp-validation-summary="All" class="text-danger"></div>
					</div>
					<div class="form-group">
						<label class="control-label dark-heading">Име</label>
						<input asp-for="Name" class="form-control dark-heading" placeholder="Въведете име на ролята..." />
						<span asp-validation-for="Name" class="text-danger"></span>
					</div>
					<div class="form-group align-items-center text-center">
						<input type="submit" id="register" value="Създай" class="btn btn-lg dark-button rounded" />
					</div>
				</form>
			</div>
		</div>
	</div>
</body>